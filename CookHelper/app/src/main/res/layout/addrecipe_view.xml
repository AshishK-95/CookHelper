<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:focusableInTouchMode="true"
    android:layout_marginTop="?attr/actionBarSize"
    android:nestedScrollingEnabled="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_marginBottom="2px"
        android:background="@color/black"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:hint="Name"
        android:textColorHint="#ffffff"
        android:textSize="48sp"
        android:gravity="center"
        android:layout_height="150dp"
        android:id="@+id/nameField"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.51"
        android:layout_below="@+id/nameField"
        android:layout_above="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:textColor="#ffffff"
                        android:hint="Cuisine"
                        android:textColorHint="#ffffff"
                        android:layout_marginBottom="2px"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:id="@+id/cuisineField"
                        android:layout_weight="51" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginBottom="2px"
                        android:textColor="#ffffff"
                        android:hint="Course"
                        android:textColorHint="#ffffff"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:id="@+id/courseField" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:textColor="#ffffff"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="Serving Size"
                android:textColorHint="#ffffff"
                android:textSize="28dp"
                android:layout_marginLeft="2px"
                android:layout_marginBottom="2px"
                android:gravity="center"
                android:id="@+id/servingField" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="67dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="196dp"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:background="@color/black"
                        android:layout_marginBottom="2px"
                        android:layout_marginRight="2px">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="158dp"
                            android:layout_height="match_parent">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/prepTimeField"
                                android:background="@color/black"
                                android:textColor="#ffffff"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:layout_marginBottom="2px"
                                android:layout_marginRight="2px"
                                android:hint="Preparation Time"
                                android:textColorHint="#ffffff"
                                android:textSize="20sp"
                                android:gravity="center|right" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/orange"
                            android:gravity="center"
                            android:clickable="true"
                            android:id="@+id/timeUnit1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginBottom="2px">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:textColor="#ffffff"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:hint="Cook Time"
                            android:textColorHint="#ffffff"
                            android:textSize="20sp"
                            android:layout_marginBottom="2px"
                            android:gravity="center|right"
                            android:id="@+id/cookTimeField"
                            android:layout_weight="0.10" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:id="@+id/timeUnit2"
                            android:clickable="true"
                            android:gravity="center"
                            android:textColor="@color/orange" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="98dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:textColor="#ffffff"
                        android:inputType="numberSigned"
                        android:ems="10"
                        android:hint="Calories"
                        android:textColorHint="#ffffff"
                        android:textSize="32dp"
                        android:gravity="center"
                        android:id="@+id/caloriesField"
 />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="196dp"
                    android:layout_height="48dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cancel"
                        android:background="@color/red"
                        android:id="@+id/cancelField"
                        android:layout_marginTop="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="47dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/continuebtn"
                        android:clickable="true"
                        android:background="@color/green"
                        android:id="@+id/continueField" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
